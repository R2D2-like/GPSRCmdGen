<categories>

	<category name="cleaning supllies" defaultLocation="chair" room="dining room">
		<object name="cloth"   type="known" difficulty="high" />
		<object name="cleaner" type="known" difficulty="moderate" />
		<object name="sponge"  type="known" difficulty="moderate" />
	</category>

	<category name="containers" defaultLocation="end table" room="living room">
		<object name="tray"     type="special" difficulty="high"      canPlaceOn="true" twoHands="true"  />
		<object name="basket"   type="special" difficulty="high"      canPlaceIn="true" twoHands="true"  />
		<object name="bag"      type="special" difficulty="easy"      canPlaceIn="true"                  />
	</category>

	<category name="cutlery"    defaultLocation="long table" room="living room">
		<object name="fork"     type="known" difficulty="high" />
		<object name="spoon"    type="known" difficulty="high" />
	</category>

	<category name="drinks"         defaultLocation="counter" room="kitchen">
		<object name="barley tea" type="known" difficulty="easy" canPour="true" />
		<object name="coke"            type="known" difficulty="easy" canPour="true" />
		<object name="black coffee"     type="known" difficulty="easy" canPour="true" />
		<object name="less sugar coffee"    type="known" difficulty="easy" canPour="true" />
		<object name="green tea"          type="known" difficulty="easy" canPour="true" />
	</category>

	<category name="pantry items"       defaultLocation="low table" room="living room">
		<object name="corn flakes"   type="known" difficulty="easy" />
		<object name="mustard"  type="known" difficulty="easy" />
		<object name="sugar" type="known" difficulty="easy" />
		<object name="soup can" type="known" difficulty="easy" />
	</category>

	<category name="fruits"     defaultLocation="side table" room="dining room">
		<object name="apple"    type="alike" difficulty="moderate" />
		<object name="orange"   type="alike" difficulty="moderate" />
		<object name="lemon"  type="alike" difficulty="moderate" />
		<object name="strawberry"  type="alike" difficulty="moderate" />
		<object name="banana"  type="alike" difficulty="moderate" />
		<object name="peach"  type="alike" difficulty="moderate" />
	</category>

	<category name="snacks"         defaultLocation="shelf" room="dining room">
		<object name="pringles"     type="known" difficulty="easy" />
		<object name="pocky"     type="known" difficulty="easy" />
		<object name="bamboo shoot" type="known" difficulty="easy" />
	</category>

	<category name="tableware"  defaultLocation="storage table" room="kitchen">
		<object name="plate"     type="known" difficulty="moderate" canPlaceOn="true" />
		<object name="bowl"     type="known" difficulty="moderate" canPourIn="true"  />
		<object name="mug"    type="known" difficulty="moderate" canPourIn="true"  />
	</category>

</categories>